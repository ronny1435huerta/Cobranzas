    <script>
        $(document).ready(function () {
            // Escuchar el clic en enlaces dentro de la lista de navegación
            $('.nav-link').on('click', function (e) {
                e.preventDefault(); // Evita la acción predeterminada del enlace

                // Obtener el atributo data-toggle para identificar la pestaña deseada
                var tabToggle = $(this).attr('data-toggle');

                // Ocultar todas las pestañas
                $('.tab-pane').removeClass('show active');

                // Mostrar la pestaña deseada
                $(tabToggle).addClass('show active');
            });
        });
    </script>
}

